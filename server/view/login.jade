extend shared/layout

block body
	style.
		.padding-main-content {
			height: 15%;
		}
		md-card {
			max-width: 100px;
		}

	#message(layout="row")
	.md-inline-form(ng-controller="LoginController as loginCtrl" layout="column")
		form(name="login" ng-submit="loginCtrl.submit(user)")
			.input-container
				.heading.md-primary(style="margin-top: 0px") Login

				md-input-container.md-block
					label Username
					input(ng-model="user.username" name="username" 
						 focus-me="true" tabindex="1" required)
					div(ng-messages="login.username.$error")
						div(ng-message="required") Username required

				md-input-container.md-block
					label Password
					input(type="password" name="password" ng-model="user.password" 
						 tabindex="2" required)
					div(ng-messages="login.password.$error")
						div(ng-message="required") Password required
				md-input-container.md-block(flex-gt-sm="")
					label Login Type
					md-select(ng-model="user.role" tabindex="7")
						md-option(ng-repeat="role in loginCtrl.roles" ng-value="{{ role.id }}")
							| {{ role.name }}
				md-button.md-primary.md-raised(type="submit") Login
