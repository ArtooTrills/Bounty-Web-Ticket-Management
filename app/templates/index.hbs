{{outlet}}

{{#if session.isAuthenticated}}
  {{#if session.currentUser}}
    <div id="dashboard" class="">
      <div class="ui centered link cards">
        <div class="card">
          <div class="animated bounceIn role-avatar sprite-{{session.currentUser.role}}"></div>
          <div class="center aligned content">
            <div class="header">{{session.currentUser.name}}</div>
            <div class="meta">
              {{session.currentUser.role}}
            </div>
            <div class="description">
              {{session.currentUser.email}}
            </div>
          </div>
          <div class="right aligned extra content">
            <span><i class="bug icon"></i>{{session.currentUser.bugs.length}} bugs</span>
          </div>
        </div>
        <div class="card">
          <div class="content">
            <div class="header"><i class="newspaper icon"></i> News</div>
            <div class="description">
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
            </div>
          </div>
        </div>
        <div class="card">
          <div class="content">
            <svg width="100" height="100" class="pie chart">
                <circle r="25" cx="50" cy="50" class="pie" style="stroke-dasharray: 94.8, 158;"></circle>
              </svg>
            <div class="center aligned extra content">
              Issues
            </div>
          </div>
        </div>
      </div>
      <div class="ui centered card">
        <div class="content">
          <svg viewBox="0 0 500 100" class="line chart">

<polyline fill="none" stroke="#0074d9" stroke-width="2" points="
     00,120
     20,60
     40,80
     60,20
     80,80
     100,80
     120,60
     140,100
     160,90
     180,80
     200, 110
     220, 10
     240, 70
     260, 100
     280, 100
     300, 40
     320, 0
     340, 100
     360, 100
     380, 120
     400, 60
     420, 70
     440, 80
   "></polyline>

</svg>
          <div class="center aligned additional content">
            Issues over Time
          </div>
        </div>
      </div>
    </div>

  {{/if}}
{{else}}
  <div class="ui center aligned segment">
    <h2>Welcome to Artoo Bug Ticket Management System (BTMS)</h2>
    {{#link-to 'login' class="ui button" }}Please Login{{/link-to}}
    <div class="ui hidden divider">
    </div>
  </div>
{{/if}}
<small class="subtle">BTMS Version: {{app-version}}</small>
